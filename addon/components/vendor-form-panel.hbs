<Overlay
    @onLoad={{this.setOverlayContext}}
    @position="right"
    @noBackdrop={{true}}
    @fullHeight={{true}}
    @isResizeble={{or this.isResizable @isResizable}}
    @width={{or this.width @width "600px"}}
>
 <Overlay::Header @title={{if this.vendor.public_id this.vendor.name "New Vendor"}} @status={{this.vendor.public_id}} @hideStatusDot={{true}} @createdAt={{this.vendor.createdAt}} @titleWrapperClass="leading-5">
        <div class="flex flex-1 justify-end">
            <Button @icon={{if this.vendor.id "save" "check"}} @type="primary" @text={{if this.vendor.id "Save Vendor" "Create Vendor"}} @onClick={{this.save}} @wrapperClass="mr-2" />
            <Button @type="default" @icon="id-card" @helpText="View fleet details" @onClick={{this.onViewDetails}} @wrapperClass="mr-2" />
            <Button @type="default" @icon="times" @helpText={{if this.vendor.id "Cancel edit vendor" "Cancel new vendor"}} @onClick={{this.onPressCancel}} />
        </div>
    </Overlay::Header>

    <Overlay::Body @wrapperClass="new-service-rate-overlay-body px-4 space-y-4 pt-4" @increaseInnerBodyHeightBy={{1000}}>
        {{#if this.isEditing}}
            <VendorFormPanel::EditForm @vendor={{this.vendor}} @onVendorChanged={{this.onVendorChanged}} />
        {{else}}
            <VendorFormPanel::CreateForm @vendor={{this.vendor}} @onVendorChanged={{this.onVendorChanged}} />
        {{/if}}
    </Overlay::Body>
</Overlay>