<Layout::Section::Header @title={{t "fleet-ops.common.orders"}} @onSearch={{this.search}} />

<Layout::Section::Body>

    <div class="hidden md:flex flex-col p-4">
        {{#each this.orders as |order|}}
            <div class="grid grid-cols-2 gap-2 text-xs dark:text-gray-100 bg-gray shadow-md rounded-lg p-4 mb-4 border border-gray-700">
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.id"}}</h1>
                    </div>
                    <ClickToCopy class="text-gray-100 text-sm" @value={{order.public_id}}>{{order.public_id}}</ClickToCopy>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.status"}}</h1>
                        </div>
                    </div>
                    <span class="text-gray-100 text-sm mt-8">
                        <Badge @status={{order.status}} /></span>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.dropoff"}}</h1>

                        </div>
                    </div>
                    <span class="text-gray-100 text-sm">
                        <DisplayPlace @place={{@options.order.payload.dropoff}} @type="dropoff" @addressClass="text-sm dark:text-gray-100" @noAddressClass="text-sm" /></span>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.pickup"}}</h1>
                        </div>
                    </div>
                    <span class="text-gray-100 text-sm">
                        <DisplayPlace @place={{@options.order.payload.pickup}} @type="pickup" />
                    </span>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.vehicle-name"}}</h1>
                        </div>
                    </div>
                    <span class="text-gray-100 text-sm">
                        <div>{{n-a @order.driver_assigned.vehicle_name}}</div>
                    </span>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.customer"}}</h1>
                        </div>
                    </div>
                    <span class="text-gray-100 text-sm">
                        <ClickToCopy class="text-gray-100 text-sm" @value={{order.customer}}>{{n-a @order.customer}}</ClickToCopy>
                    </span>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.created-at"}}</h1>
                        </div>
                    </div>
                    <span class="text-gray-100 text-sm">
                        <div>{{format-date order.created_at "d MMM yyyy"}}</div>
                    </span>
                </div>
                <div class="container mx-auto px-4 py-2">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <h1 class="flex items-center text-sm font-bold">{{t "fleet-ops.common.tracking"}}</h1>
                        </div>
                    </div>
                    <span class="text-gray-100 text-sm">
                        <ClickToCopy class="text-gray-100 text-sm" @value={{order.tracking_number.tracking_number}}>{{n-a @order.tracking_number.tracking_number}}</ClickToCopy>
                    </span>
                </div>
            </div>
        {{/each}}
    </div>

</Layout::Section::Body>