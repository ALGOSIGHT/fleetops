<div class="p-4">
    <ContentPanel @title="Details" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-900">
        <div class="grid grid-cols-1 gap-2 lg:grid-cols-2 lg:gap-4 text-xs dark:text-gray-100">
            <div class="field-info-container">
                <div class="field-name">Type</div>
                <div class="field-value"><Badge @status={{@options.issue.type}} /></div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Report</div>
                <div class="field-value">{{n-a @options.issue.report}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Priority</div>
                <div class="field-value">{{n-a @options.issue.priority}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Status</div>
                <div class="field-value">{{n-a @options.issue.status}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Coordinates</div>
                <div class="field-value">{{point-coordinates @options.issue.location}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">Date Created</div>
                <div class="field-value">{{@options.issue.createdAtShort}}</div>
            </div>
        </div>
    </ContentPanel>
</div>