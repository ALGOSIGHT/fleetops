<div class="flex flex-row items-center px-6 py-2 space-x-4">
    <Button @type="primary" @icon="save" @text={{t "fleet-ops.component.order-config-manager.activity-flow.save-activity-flow"}} @onClick={{perform this.save}} @isLoading={{not this.save.isIdle}} />
</div>
<div class="activity-flow-graph-container">
    <div class="activity-flow-zoom-controls">
        <Button @icon="plus" @onClick={{this.zoomIn}} />
        <Button @icon="minus" @onClick={{this.zoomOut}} />
    </div>
    <JointGraph @onSetup={{this.initializeGraph}} />
</div>